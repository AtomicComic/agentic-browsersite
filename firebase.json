{
  "functions": [
    {
      "source": "functions",
      "codebase": "functions",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix functions run lint",
        "npm --prefix functions run build"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/createCheckoutSession",
        "function": "createCheckoutSession",
        "region": "us-central1"
      },
      {
        "source": "/api/getUserKey",
        "function": "getUserKey",
        "region": "us-central1"
      },
      {
        "source": "/api/stripeWebhook",
        "function": "stripeWebhook",
        "region": "us-central1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9098,
      "host": "127.0.0.1"
    },
    "functions": {
      "port": 5003,
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 8091,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 4001
    },
    "hosting": {
      "port": 5004
    },
    "hub": {
      "host": "localhost",
      "port": 4401
    },
    "apphosting": {
      "port": 5005,
      "rootDirectory": "./",
      "startCommand": "npm run dev"
    },
    "singleProjectMode": true
  }
}
